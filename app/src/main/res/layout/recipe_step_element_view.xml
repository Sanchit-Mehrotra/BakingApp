<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/recipe_step_text_view"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:fontFamily="@font/roboto_light"
        android:paddingTop="15dp"
        android:textAlignment="center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@+id/recipe_step_text_view"
        app:layout_constraintRight_toRightOf="@+id/recipe_step_text_view"
        app:layout_constraintLeft_toLeftOf="@+id/recipe_step_text_view">
    </View>

</android.support.constraint.ConstraintLayout>